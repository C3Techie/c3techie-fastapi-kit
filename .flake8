[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    dist,
    build,
    *.pyc,
    *.pyo,
    alembic/versions,
    migrations,
    node_modules

ignore =
    E203,
    W503,
    E501,
    F401,
    F403,
    C901,
    B008

per-file-ignores =
    */__init__.py:F401,F403,E402
    */tests/*.py:F401,F403,E402
    alembic/versions/*.py:F401,F403

select = E,F,W,C,B,B9